{
    "manifest_version": 3,
    "name": "Ekalvia AI",
    "version": "1.5",
    "description": "Your personal AI tutor. Right click and learn anytime. Also integrates AI powered self-education  prompt:// links.",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://*.bing.com/*",
        "https://copilot.microsoft.com/*"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "contextMenus",
        "declarativeNetRequest"
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
